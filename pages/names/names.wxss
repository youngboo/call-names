/* pages/names/names.wxss */
.names-title {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 90%;
  top: 0px;
  left:0px;
  right:0px;
  margin-left:auto;
  margin-right:auto;
  background: #FFFFFF;
  text-align: center;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0.11px;
  border-radius: 8px;
  line-height: 16px;
  height: 20px;
}
.name-container {
  margin-top:2em;
}
.student-item {
  margin: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 3em;
  width: 90vw;
  border:0.5pt solid #E4E7F0;
  border-radius:4pt;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333333;
  text-align: center;
}
  .index-text {
    margin-left:8pt;
    margin-right: 4pt;
  }
.yes {
  border-color: #E4E7F0;
}
.no {
  box-shadow: 0 0 4px 0 rgba(255,122,119,0.65);
}
.name-container {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.item-class {
  flex:1 0 50%;
}
.item-image {
  width:24px;
  height: 24px;
  margin-right:8pt;
}
.item-image image {
  width:100%;
  height: 100%;
}
.submit-button {
  position:fixed;
  left:0px;
  right:0px;
  bottom:1em;
  width:90%;
  height:2.5em;
  margin-left:auto;
  margin-right:auto;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(0,88,189,0.46);
  border-radius: 100px;
  text-align: center;
  font-size: 16px;
  color: #5997FA;
  letter-spacing: 0.11px;

}
.submit-button text {
  line-height: 2.5em;
}
.place-holder {
  height: 4em;
}
.flex-3{
    flex:0 1 33.3333%;
}
.flex-4{
    flex:0 1 25%;
}
.flex-5{
    flex:0 1 20%;
}
.flex-2{
    flex:0 1 50%;
}