/* pages/login/login.wxss */
.names-title {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  top: 0px;
  left:0px;
  right:0px;
  height:auto;
  margin-left:auto;
  margin-right:auto;
  background: #E64340;
  text-align: center;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0.11px;
}
  .warn-message {
    color:#FFFFFF;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
  }
    .warn-icon {
      margin-right:7px;
    }
.login-container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to bottom, #7da6df, #c9ddf7);
  height: 100vh;
  width: 100vw;
}
.login-box {
  z-index: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 80vw;
  border-radius: 10px;
  min-height: auto;
  margin-bottom: 15vh;
}
.form-box {
  width:90%;
  align-self:center;
}
.login-title {
  flex: 0 1 auto;
  text-align: center;
  align-content: center;
  display:flex;
  align-items:center;
  justify-content:center;
}
.title-text {
  font-size: 18px;
  color: #333333;
  letter-spacing: 7px;
  text-indent: 7px;
  text-align: center;
  line-height:3em;
  font-weight:600;
}
.form-container {
  display: flex;
  text-align: left;
  flex-direction: column;
}
.form-item {
  border: 1px solid #D8DCD7;
  border-radius: 8px;
  padding: 0.5em;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  margin: 0.5em;
}
.form-warn {
  color: #E64340;
  border-color: #E64340;
}
.image-box {
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  height:24px;
  width:24px;
}
.icon-box {
  display: flex;
  justify-content: flex-end;
  flex-wrap: nowrap; 
  flex:1 0 auto;
}
.input-icon {
  width: 20px;
  height: 20px;
}
.button-group {
  padding: 0;
  margin: 0.5em;
  margin-bottom: 1.5em;
}
.submit-button {
  line-height: 2.9em;
  display: block;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  font-size:14px;
  text-decoration:none;
  border-radius: 30px;
  background: #5997FA;
  text-align: center;
  color: #fff;
  letter-spacing:4px;
  text-indent:4px;
}
  .submit-button .button-text {
    border: 0;
    background: #5997FA;
    flex: 1 0 100%;
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0.11px;
  }
  .button-text::after {
    border: none;
  }
.bottom-box {
  position:fixed;
  bottom:-3px;
  z-index:0;
  flex:none;
  left:0;
  right:0;
  width: 100vw;
}
  .bottom-image {
    width: 100%;
  }
.bottom-message {
  position: fixed;
  bottom: 10px;
  width: auto;
  text-align: center;
  height:auto;
  left: 0;
  right: 0;
  margin-left:auto;
  margin-right:auto;
  background: transparent;
  display:flex;
  justify-content:center;
}
.bottom-message .warn-message {
  width: auto;
  background: rgba(255,255,255,0.49);
  color:  #585858;
  border-radius: 18px;
}