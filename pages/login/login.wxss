/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  background: #7da6df;
  height: 100vh;
  width: 100vw;
}
.login-box {
  text-align: center;
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 80vw;
  border-radius: 10px;
  min-height: 50vh;
}
.form-box {
  width:90%;
  align-self:center;
}
.login-title {
  flex: 0 1 auto;
  text-align: center;
  align-content: center;
  display:flex;
  align-items:center;
  justify-content:center;
}
.title-text {
  font-size: 18px;
  color: #333333;
  letter-spacing: 7px;
  text-indent: 7px;
  text-align: center;
  line-height:3em;
  font-weight:600;
}
.form-container {
  display: flex;
  text-align: left;
  flex-direction: column;
}
.form-item {
  border: 1px solid #D8DCD7;
  border-radius: 8px;
  padding: 0.5em;
  display: flex;
  align-content: center;
  flex-wrap: nowrap;
  margin: 0.5em;
}
.input-icon {
  width: 1.4em;
  height: 1.4em;
}
.button-group {
  padding: 0;
  margin: 0.5em;
  margin-bottom: 1.5em;
}
.submit-button {
  line-height: 2.9em;
  display: block;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  font-size:14px;
  text-decoration:none;
  border-radius: 30px;
  background: #5997FA;
  text-align: center;
  color: #fff;
  letter-spacing:4px;
  text-indent:4px;
}
  .submit-button .button-text {
    border: 0;
    background: #5997FA;
    flex: 1 0 100%;
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0.11px;
  }
  .button-text::after {
    border: none;
  }