/* pages/userInfo/userInfo.wxss */
.center-container {
   display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  background: #7da6df;
  min-height: 100vh;
  height: auto;
  width: 100%;
}
.no-container {
  display:flex;
  align-items:center;
  justify-content:center;
}
.list-box {
  margin-top:1.4em;
  display:flex;
  width:90%;
  min-height: 90vh;
  height: auto;
  background: #fff;
  flex-direction:column;
  border-radius:8px;
}
.title-bar {
  width: 90%;
  height:10vh;
  display:flex;
  justify-content:space-between;
  flex-wrap:no-wrap;
  align-items: center;
  align-self:center;
}
.user-info {
  display: flex;
  justify-content: center;
  align-items: center
}
  .image-box {
    width: 32px;
    height: 32px;
    margin: 0;
    padding: 0;
    box-shadow: 0 2px 10px 0 rgba(0,0,0,0.08);
    background: transparent;
    margin-right: 0.5em;
    border-radius: 100%;
  }

  .user-image {
    border-radius: 100%;
    height:100%;
    width:100%;
  }
  .bar-item {
    background: #5997FA;
    color:#fff;
    border-radius: 49px;
    font-size: 12px;
    height: 21px;
    width: 49px;
    display:flex;
    flex-wrap:no-wrap;
    justify-content:center;
    align-items:center;
  }
  .close-icon {
    width: 14px;
    height: 14px;
  }
.divider-box {
  text-align: center;
  display:flex;
  justify-content:center;
}
  .divider {
    width: 90%;
    border-bottom: 1px solid rgba(214, 207, 207, 0.801);
  }
  .list-container {
    width: 100%;
  }