/* pages/userInfo/userInfo.wxss */
.center-container {
   display: flex;
  flex-wrap: nowrap;
  align-items: center;
  background: linear-gradient(to bottom, #7da6df, #c9ddf7);
  min-height: 100vh;
  height: auto;
  width: 100%;
  flex-direction: column;
}
.names-container {
  border-radius:8px;
  z-index: 1;
  height:100vh;
}
.no-container {
  display:flex;
  align-items:center;
  justify-content:center;
  width: 100%;
}
  .no-image {
    width: 100%;
  }
.list-box {
  display:flex;
  width:90%;
  min-height: 95vh;
  height: auto;
  background: #fff;
  flex-direction:column;
  border-radius:8px;
  margin: 10px;
  z-index:1;
}
.title-bar {
  width: 90%;
  height:60px;
  display:flex;
  justify-content:space-between;
  flex-wrap:no-wrap;
  align-items: center;
  align-self:center;
}
.user-info {
  display: flex;
  justify-content: center;
  align-items: center
}
  .image-box {
    width: 48px;
    height: 48px;
    margin: 0;
    padding: 0;
    box-shadow: 0 2px 10px 0 rgba(0,0,0,0.08);
    background: transparent;
    margin-right: 0.5em;
    border-radius: 100%;
  }

  .user-image {
    border-radius: 100%;
    height:100%;
    width:100%;
  }
  .bar-item {
    background: #5997FA;
    color:#fff;
    border-radius: 49px;
    font-size: 12px;
    height: 21px;
    width: 58px;
    display:inline-flex;
    line-height: 14px;
    flex-wrap:no-wrap;
    justify-content:center;
    align-items:center;
  }
    .item-text {
      font-size: 11px;
      font-family: PingFangSC-Regular;
      color: #FFFFFF;
      letter-spacing: 0.09px;
    }
  .close-icon {
    width: 14px;
    height: 14px;
    padding-right: 4px;
  }
.divider-box {
  text-align: center;
  display:flex;
  justify-content:center;
}
  .divider {
    width: 90%;
    border-bottom: 1px solid rgba(214, 207, 207, 0.801);
  }
  .list-container {
    width: 100%;
    padding:10px 10px 10px 0px;
    min-height:70vh;
    max-height: 70vh;
    overflow: auto;
  }
.bottom-box {
  position:fixed;
  bottom:-5px;
  z-index:0;
  flex:none;
  left:0;
  right:0;
  width: 100vw;
}
  .bottom-image {
    width: 100%;
  }