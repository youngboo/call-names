<!--pages/userInfo/userInfo.wxml-->
<view class='center-container'>
  <view class='list-box'>
    <view class='title-bar'>
      <view clas='user-info'>
        <view class='image-box'>
          <image class='user-image' src='{{userInfo.photo}}'></image>
        </view>
        <text class='user-name'>{{userInfo.realName}}</text>
      </view>
      <view class='bar-item' bindtap='logout'>
        <image class='close-icon' src='../../resources/image/icon_close.png'></image>
        <text>注销</text>
      </view>
    </view>
    <view class='divider-box'>
      <view class='divider'/>
    </view>
    <view>
      <week-selector bind:changeWeek='onChangeWeek' current="{{currentWeek}}"></week-selector>
    </view>
    <view class='list-container'>
      <view wx:if='{{courseList}}'>
        <course-list dataSource="{{courseList}}" bind:tapEvent='onTapCourse'></course-list>
      </view>
      <view wx:else>
        <image src='../../resources/image/pic_null.png'></image>
      </view>
    </view>
  </view>
</view>