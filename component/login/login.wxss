/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  background: #7da6df;
  height: 100vh;
}
.login-box {
  text-align: center;
  display: flex;
  flex-direction: column;
  background: #fff;
  height: 60vh;
  border-radius: 10px;
}
.login-title {
  flex: 0 1 auto;
  text-align: center;
  align-content: center;
}
.title-text {
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #333333;
  letter-spacing: 0.13px;
  text-align: center;
  line-height:4em;
}
.form-container {
  display: flex;
  text-align: left;
  flex-direction: column;
}
.form-item {
  border: 1px solid #7da6df;
  border-radius: 10px;
  padding: 0.5em;
  display: flex;
  align-content: center;
  flex-wrap: nowrap;
  margin: 0.5rem;
}
.input-icon {
  width: 1.4rem;
  height: 1.4rem;
}
.submit-button {
  display: flex;
  border-radius: 30px;
  background: #5997FA;
  text-align: center;
  color: #fff;
}
  .submit-button .button-text {
    border: 0;
    background: #5997FA;
    flex: 1 0 100%;
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0.11px;
  }
  .button-text::after {
    border: none;
  }