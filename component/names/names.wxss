/* component/names/names.wxss */
.names-box {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90vw;
  border-radius: 8px;
}
.top-box {
  background: #FFFFFF;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: auto;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0 2px 4px 0 rgba(0,88,189,0.46);
  flex: 1 0 100%;
}
  .title-box {
    width: 90%;
    text-align: center;
    font-size: 16px;
    color: #333333;
    letter-spacing: 0.11px;
    border-radius: 8px;
    line-height: 16px;
    flex: none;
    margin-top: 16px;
  }
  .list-box {
    flex: 1 0 auto;
    overflow: auto;
    height: 80vh;
    width:100%;
  }
    .names-list {
      overflow: auto;
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
    }
  .names-bottom {
    flex: none;
    width: 100%;
    background:#7DA6DF;
    padding-top:10px;
    box-sizing:border-box;
    display: flex;
    align-items: center;
    justify-content: center;
  }
.names-title {
  display: flex;
  align-items: left;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0.11px;
  border-radius: 8px;
  line-height: 16px;
}
  .title-top{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width:100%;
    padding-bottom: 5px;
    box-sizing: border-box;
  }
  .warn-message {
    font-size: 14px;
    display: inline-flex;
    justify-content: center;
    width: 90%;
    padding: 10px;
  }
    .warn-icon {
      margin-right:7px;
    }
.name-container {
  margin-top:3em;
}
.back-container {
  display: inline-flex;
  flex-wrap: nowrap;
}
  .back-image {
    width: 16px;
    height: 16px;
    padding-right: 4px;
  }
.student-item {
  margin: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 3em;
  height: 3em;
  width: 90%;
  border:0.5pt solid #E4E7F0;
  border-radius:4pt;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333333;
  text-align: center;
}
  .index-text {
    margin-left:8pt;
    margin-right: 4pt;
  }
.yes {
  border-color: #E4E7F0;
}
.no {
  box-shadow: 0 0 4px 0 rgba(255,122,119,0.65);
}
.item-name {
  flex:1 0 25%;
  text-align: left;
}
.item-class {
  flex:1 0 50%;
}
.item-image {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex:1 0 25%;
}
.item-image image {
  margin-right: 8px;
  width:24px;
  height: 24px;
}
.submit-button {
  width:100%;
  height:2.5em;
  margin-left:auto;
  margin-right:auto;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(0,88,189,0.46);
  border-radius: 100px;
  text-align: center;
  font-size: 16px;
  color: #5997FA;
  letter-spacing: 0.11px;

}
.submit-button text {
  line-height: 2.5em;
}
.place-holder {
  height: 4em;
}
.flex-3{
    flex:0 1 33.3333%;
}
.flex-4{
    flex:0 1 25%;
}
.flex-5{
    flex:0 1 20%;
}
.flex-2{
    flex:0 1 50%;
}