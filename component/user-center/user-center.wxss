/* pages/userInfo/userInfo.wxss */
.center-container {
   display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  background: #7da6df;
  min-height: 100vh;
  height: auto;
  width: 100%;
}
.list-box {
  margin-top:1.4em;
  display:flex;
  width:90%;
  min-height: 90vh;
  height: auto;
  background: #fff;
  flex-direction:column;
}
.title-bar {
  width: 90%;
  height:10vh;
  display:flex;
  justify-content:space-between;
  flex-wrap:no-wrap;
  align-items: center;
  align-self:center;
}
  .image-box {
    width: 32px;
    height: 32px;
    margin: 0;
    padding: 0;
    display: inline-block;
    vertical-align: center;
    line-height: 32px;
  }

  .user-image {
    height:48rpx;
    width:48rpx;
    padding-right:0.5em;
    border-radius: 100%;
  }
.divider-box {
  text-align: center;
  display:flex;
  justify-content:center;
}
  .divider {
    width: 90%;
    border-bottom: 1px solid rgba(214, 207, 207, 0.801);
  }
  .list-container {
    width: 100%;
  }